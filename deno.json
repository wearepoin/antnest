{
  "tasks": {
    "start": "deno run --allow-read --allow-write cli.ts",
    "dev": "deno run --watch --allow-read --allow-write cli.ts",
    "test": "deno test --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "compile": "deno compile --allow-read --allow-write --output antnest cli.ts",
    "compile:win": "deno compile --allow-read --allow-write --output antnest.exe cli.ts",
    "bundle": "deno bundle mod.ts antnest.js"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "std/": "https://deno.land/std@0.224.0/",
    "cliffy/": "https://deno.land/x/cliffy@v1.0.0-rc.7/"
  },
  "lint": {
    "include": ["./src"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/", "cli.ts", "mod.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  }
}
